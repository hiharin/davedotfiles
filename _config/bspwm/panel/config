#!/bin/bash

# panel setup
PANEL_HEIGHT=16
PANEL_FONT_FAMILY=
PANEL_FONT_FAMILY="$PANEL_FONT_FAMILY,-*-stlarch-medium-r-*-*-10-*-*-*-*-*-*-*"
PANEL_FONT_FAMILY="$PANEL_FONT_FAMILY,-*-lemon-medium-*-*-*-10-*-*-*-*-*-*-*"
PANEL_FONT_FAMILY="$PANEL_FONT_FAMILY,-*-terminus-medium-r-normal-*-12-*-*-*-c-*-*-1"
#PANEL_FONT_FAMILY="$PANEL_FONT_FAMILY,-*-tewi-medium-*-*-*-11-*-*-*-*-*-*-*"
#PANEL_FONT_FAMILY="$PANEL_FONT_FAMILY,-*-uushi-medium-*-*-*-11-*-*-*-*-*-*-*"

[ -f /tmp/xrandr.txt ] || xrandr > /tmp/xrandr.txt

mon_dimensions=$(cat /tmp/xrandr.txt | grep primary | awk '{ print $4 }')
mon_offset=$(echo $mon_dimensions | cut -d+ -f2)
mon_width=$(echo $mon_dimensions | cut -dx -f1)
PANEL_GEOMETRY="$((mon_width - 16))x${PANEL_HEIGHT}+$((mon_offset + 8))+0"
#PANEL_GEOMETRY=$(xrandr | grep primary | awk '{print $4}' | sed 's/x[0-9]\+/x'$PANEL_HEIGHT'/')
PANEL_FIFO=/tmp/panel-fifo

# colors
#COLOR_FOREGROUND='#FFA3A6AB'
#COLOR_BACKGROUND='#FF34322E'
COLOR_FOREGROUND='#FFC5C8C6'
COLOR_BACKGROUND='#FF2D2D2D'
COLOR_FOCUSED='#FF0088CC'
COLOR_OCCUPIED='#FFC5C8C6'
#COLOR_OCCUPIED='#FF5C5955'

COLOR_ACTIVE_MONITOR_FG=$COLOR_BACKGROUND
COLOR_ACTIVE_MONITOR_BG='#FF58C5F1'
COLOR_INACTIVE_MONITOR_FG='#FF58C5F1'
COLOR_INACTIVE_MONITOR_BG=$COLOR_BACKGROUND
COLOR_FOCUSED_OCCUPIED_FG='#FFF6F9FF'
COLOR_FOCUSED_OCCUPIED_BG='#FF5C5955'
COLOR_FOCUSED_FREE_FG='#FFF6F9FF'
COLOR_FOCUSED_FREE_BG='#FF6D561C'
COLOR_FOCUSED_URGENT_FG=$COLOR_BACKGROUND
COLOR_FOCUSED_URGENT_BG='#FFF9A299'
COLOR_OCCUPIED_FG=$COLOR_FOREGROUND
COLOR_OCCUPIED_BG=$COLOR_BACKGROUND
COLOR_FREE_FG='#FF6F7277'
COLOR_FREE_BG=$COLOR_BACKGROUND
COLOR_URGENT_FG=$COLOR_FOCUSED_URGENT_FG
COLOR_URGENT_BG=$COLOR_BACKGROUND
COLOR_LAYOUT_FG=$COLOR_FOREGROUND
COLOR_LAYOUT_BG=$COLOR_BACKGROUND
COLOR_TITLE_FG=$COLOR_FOREGROUND
COLOR_TITLE_BG=$COLOR_BACKGROUND
COLOR_STATUS_FG=$COLOR_FOREGROUND
COLOR_STATUS_BG=$COLOR_BACKGROUND
